﻿@using Application
@using Newtonsoft.Json
@using Microsoft.AspNetCore.Identity
@model List<IdentityRole>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    var response = TempData["response"]?.ToString() ?? string.Empty;
    var data = JsonConvert.DeserializeObject<ResponseResult>(response);
    var message = data?.Message ?? string.Empty;
    var status = data?.StatusCode ?? default;
}

<title>Roles manage</title>

<main id="main" class="main">
    <p hidden id="message">@message</p>
    <p hidden id="status">@status</p>
    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h5 style="display: inline-block" class="card-title col-sm-2">All roles (@Model.Count)</h5>
                        <a href="/Account/CreateRole" type="button" class="btn btn-success">Add new</a>

                        <!-- Table with stripped rows -->
                        <table style="text-align: center" class="table datatable table-hover table-bordered">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>NormalizedName</th>
                                    <th>ConcurrencyStamp</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody">
                                @foreach (var role in Model)
                                {
                                    <tr>
                                        <td>@role.Name</td>
                                        <td>@role.NormalizedName</td>
                                        <td>@role.ConcurrencyStamp</td>
                                        <td>
                                            <a href="@Url.Action("UpdateRole", "Account", new {id = role.Id})" class="btn btn-sm btn-primary">Edit</a>
                                            <a onclick="return confirm('Are you sure you want to delete this role?')" href="@Url.Action("DeleteRole", "Account", new {id = role.Id})" class="btn btn-sm btn-danger">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <!-- End Table with stripped rows -->
                    </div>
                </div>

            </div>
        </div>
    </section>

</main><!-- End #main -->

@section Scripts {
    <script src="/NiceAdmin/js/result.js"></script>
}